{
  "name": "pctrl",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/desktop",
    "apps/landing",
    "apps/mobile"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "concurrently -n api,landing -c cyan,magenta \"cd apps/docs-api && bun run dev\" \"cd apps/landing && npm run dev\"",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "desktop": "cd apps/desktop && npm run tauri dev",
    "landing": "cd apps/landing && npm run dev",
    "api": "cd apps/docs-api && bun run dev",
    "mobile": "cd apps/mobile && npm start"
  },
  "devDependencies": {
    "babel-preset-expo": "^54.0.0",
    "concurrently": "^9.2.1",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0"
  }
}
