  }
  return acc;
}, 0);

const completedFeatures = phases.reduce((acc, phase) => {
  if (phase.features) return acc + phase.features.filter(f => f.done).length;
  if (phase.categories) {
    return acc + phase.categories.reduce((catAcc, cat) => catAcc + cat.features.filter(f => f.done).length, 0);
  }
  return acc;
}, 0);
