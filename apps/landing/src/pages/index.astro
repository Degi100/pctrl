<style>
  main {
    width: 100%;
  }

  .hero {
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }

  .ascii-logo {
    font-family: 'Fira Code', 'Consolas', monospace;
    font-size: 0.7rem;
    line-height: 1.2;
    margin-bottom: 1rem;
    white-space: pre;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
  }

  @media (min-width: 768px) {
    .ascii-logo {
      font-size: 1rem;
    }
  }

  .tagline {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    opacity: 0.95;
  }

  .description {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    opacity: 0.9;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    padding: 1rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: transform 0.2s;
  }

  .btn:hover {
    transform: translateY(-2px);
  }

  .btn-primary {
    background: white;
    color: var(--primary);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    border: 2px solid white;
  }

  section {
    padding: 4rem 0;
  }

  h2 {
    font-size: 2.5rem;
    margin-bottom: 3rem;
    text-align: center;
    color: var(--dark);
  }

  /* Quick Start */
  .quickstart {
    background: var(--dark);
    color: white;
  }

  .quickstart h2 {
    color: white;
  }

  .code-block {
    background: #1a1a2e;
    border-radius: 12px;
    padding: 2rem;
    overflow-x: auto;
    max-width: 700px;
    margin: 0 auto;
  }

  .code-block pre {
    margin: 0;
  }

  .code-block code {
    font-family: 'Fira Code', monospace;
    font-size: 0.95rem;
    color: #a8ff60;
  }

  /* Features */
  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .feature {
    padding: 2rem;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .feature h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--primary);
  }

  .feature p {
    margin-bottom: 1rem;
    color: #666;
  }

  .feature code {
    display: block;
    background: #f5f5f5;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.85rem;
    color: var(--primary);
    font-family: 'Fira Code', monospace;
  }

  /* Modes */
  .modes {
    background: var(--light);
  }

  .mode-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .mode {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  .mode h3 {
    color: var(--primary);
    margin-bottom: 1rem;
  }

  .status {
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    display: inline-block;
  }

  .status.complete {
    background: #d4edda;
    color: #155724;
  }

  .status.progress {
    background: #fff3cd;
    color: #856404;
  }

  /* Roadmap */
  .roadmap {
    background: white;
  }

  .timeline {
    display: grid;
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .milestone {
    background: var(--light);
    padding: 2rem;
    border-radius: 12px;
    border-left: 4px solid #ccc;
  }

  .milestone.done {
    border-left-color: #28a745;
  }

  .milestone.current {
    border-left-color: var(--primary);
  }

  .milestone.future {
    border-left-color: #6c757d;
  }

  .milestone-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .milestone h3 {
    color: var(--dark);
    margin: 0;
  }

  .badge {
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.85rem;
  }

  .badge.done {
    background: #d4edda;
    color: #155724;
  }

  .badge.progress {
    background: #e7d4f8;
    color: var(--primary);
  }

  .badge.future {
    background: #e9ecef;
    color: #6c757d;
  }

  .milestone ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .milestone li {
    padding: 0.4rem 0;
  }

  /* Changelog */
  .changelog {
    background: var(--light);
  }

  .changes {
    max-width: 800px;
    margin: 0 auto;
    display: grid;
    gap: 1.5rem;
  }

  .version {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .version h3 {
    color: var(--primary);
    margin-bottom: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .date {
    font-size: 1rem;
    color: #666;
    font-weight: normal;
  }

  .version ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .version li {
    padding: 0.4rem 0;
    padding-left: 1.5rem;
    position: relative;
  }

  .version li::before {
    content: "‚Ä¢";
    position: absolute;
    left: 0;
    color: var(--primary);
  }

  /* Tech Stack */
  .tech {
    background: white;
  }

  .tech-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 1rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .tech-item {
    background: var(--light);
    padding: 1.5rem 1rem;
    border-radius: 8px;
    text-align: center;
  }

  .tech-item strong {
    display: block;
    color: var(--primary);
    margin-bottom: 0.25rem;
  }

  .tech-item span {
    font-size: 0.85rem;
    color: #666;
  }

  /* Footer */
  footer {
    background: var(--dark);
    color: white;
    padding: 2rem 0;
    text-align: center;
  }

  footer a {
    color: var(--primary);
    text-decoration: none;
  }

  footer a:hover {
    text-decoration: underline;
  }
</style>
